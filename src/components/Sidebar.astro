---
// src/components/Sidebar.astro
---

<script src="https://unpkg.com/lucide@latest"></script>
<aside class="w-60 h-screen bg-white shadow-md p-4 fixed">
  <h2 class="text-xl font-bold mb-6">Menu</h2>
  <nav class="space-y-2 text-sm">
    <a
      href="/home"
      class="flex items-center gap-2 px-3 py-2 rounded hover:bg-blue-100"
    >
      <i data-lucide="home" class="w-5 h-5"></i> Home
    </a>
    <a
      href="/tentang"
      class="flex items-center gap-2 px-3 py-2 rounded hover:bg-blue-100"
    >
      <i data-lucide="info" class="w-5 h-5"></i> Tentang
    </a>
    <a
      href="/data"
      class="flex items-center gap-2 px-3 py-2 rounded hover:bg-blue-100"
    >
      <i data-lucide="database" class="w-5 h-5"></i> Data
    </a>
    <a
      href="/dashboard"
      class="flex items-center gap-2 px-3 py-2 rounded hover:bg-blue-100"
    >
      <i data-lucide="layout-dashboard" class="w-5 h-5"></i> Dashboard
    </a>
    <button
      onclick="logout()"
      class="flex items-center gap-2 w-full text-left px-3 py-2 mt-6 bg-red-100 text-red-600 hover:bg-red-200 rounded"
    >
      <i data-lucide="log-out" class="w-5 h-5"></i> Logout
    </button>
  </nav>

  <script>
    if (typeof lucide !== "undefined") {
      lucide.createIcons();
    }
    function logout() {
      localStorage.removeItem("isLoggedIn");
      window.location.href = "/";
    }
  </script>
</aside>
