{
  "nomor": "102",
  "nama": "At-Takathur",
  "ayat": [
    {
      "arabic": "أَلۡهَىٰكُمُ ٱلتَّكَاثُرُ",
      "latin": "Alhakumu alttakathuru",
      "translation": "Bermegah-megahan telah melalaikan kamu"
    },
    {
      "arabic": "حَتَّىٰ زُرۡتُمُ ٱلۡمَقَابِرَ",
      "latin": "Hatta zurtumu almaqabira",
      "translation": "sampai kamu masuk ke dalam kubur"
    },
    {
      "arabic": "كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "latin": "Kalla sawfa taAAlamoona",
      "translation": "Sekali-kali tidak! Kelak kamu akan mengetahui (akibat perbuatanmu itu)"
    },
    {
      "arabic": "ثُمَّ كَلَّا سَوۡفَ تَعۡلَمُونَ",
      "latin": "Thumma kalla sawfa taAAlamoona",
      "translation": "kemudian sekali-kali tidak! Kelak kamu akan mengetahui"
    },
    {
      "arabic": "كَلَّا لَوۡ تَعۡلَمُونَ عِلۡمَ ٱلۡيَقِينِ",
      "latin": "Kalla law taAAlamoona AAilma alyaqeeni",
      "translation": "Sekali-kali tidak! Sekiranya kamu mengetahui dengan pasti"
    },
    {
      "arabic": "لَتَرَوُنَّ ٱلۡجَحِيمَ",
      "latin": "Latarawunna aljaheema",
      "translation": "niscaya kamu benar-benar akan melihat neraka Jahim"
    },
    {
      "arabic": "ثُمَّ لَتَرَوُنَّهَا عَيۡنَ ٱلۡيَقِينِ",
      "latin": "Thumma latarawunnaha AAayna alyaqeeni",
      "translation": "kemudian kamu benar-benar akan melihatnya dengan mata kepala sendiri"
    },
    {
      "arabic": "ثُمَّ لَتُسۡـَٔلُنَّ يَوۡمَئِذٍ عَنِ ٱلنَّعِيمِ",
      "latin": "Thumma latusalunna yawmaithin AAani alnnaAAeemi",
      "translation": "kemudian kamu benar-benar akan ditanya pada hari itu tentang kenikmatan (yang megah di dunia itu)"
    }
  ]
}