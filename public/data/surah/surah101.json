{
  "nomor": "101",
  "nama": "Al-Qari'ah",
  "ayat": [
    {
      "arabic": "ٱلۡقَارِعَةُ",
      "latin": "AlqariAAatu",
      "translation": "Hari Kiamat"
    },
    {
      "arabic": "مَا ٱلۡقَارِعَةُ",
      "latin": "Ma alqariAAatu",
      "translation": "Apakah hari Kiamat itu"
    },
    {
      "arabic": "وَمَآ أَدۡرَىٰكَ مَا ٱلۡقَارِعَةُ",
      "latin": "Wama adraka ma alqariAAatu",
      "translation": "Dan tahukah kamu apakah hari Kiamat itu"
    },
    {
      "arabic": "يَوۡمَ يَكُونُ ٱلنَّاسُ كَٱلۡفَرَاشِ ٱلۡمَبۡثُوثِ",
      "latin": "Yawma yakoonu alnnasu kaalfarashi almabthoothi",
      "translation": "Pada hari itu manusia seperti laron yang beterbangan"
    },
    {
      "arabic": "وَتَكُونُ ٱلۡجِبَالُ كَٱلۡعِهۡنِ ٱلۡمَنفُوشِ",
      "latin": "Watakoonu aljibalu kaalAAihni almanfooshi",
      "translation": "dan gunung-gunung seperti bulu yang dihambur-hamburkan"
    },
    {
      "arabic": "فَأَمَّا مَن ثَقُلَتۡ مَوَٰزِينُهُۥ",
      "latin": "Faamma man thaqulat mawazeenuhu",
      "translation": "Maka adapun orang yang berat timbangan (kebaikan)nya"
    },
    {
      "arabic": "فَهُوَ فِي عِيشَةٖ رَّاضِيَةٖ",
      "latin": "Fahuwa fee AAeeshatin radiyatin",
      "translation": "maka dia berada dalam kehidupan yang memuaskan (senang)"
    },
    {
      "arabic": "وَأَمَّا مَنۡ خَفَّتۡ مَوَٰزِينُهُۥ",
      "latin": "Waamma man khaffat mawazeenuhu",
      "translation": "Dan adapun orang yang ringan timbangan (kebaikan)nya"
    },
    {
      "arabic": "فَأُمُّهُۥ هَاوِيَةٞ",
      "latin": "Faommuhu hawiyatun",
      "translation": "maka tempat kembalinya adalah neraka Hāwiyah"
    },
    {
      "arabic": "وَمَآ أَدۡرَىٰكَ مَا هِيَهۡ",
      "latin": "Wama adraka ma hiyah",
      "translation": "Dan tahukah kamu apakah neraka Hāwiyah itu"
    },
    {
      "arabic": "نَارٌ حَامِيَةُۢ",
      "latin": "Narun hamiyatun",
      "translation": "(Yaitu) api yang sangat panas"
    }
  ]
}