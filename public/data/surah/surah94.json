{
  "nomor": "94",
  "nama": "Ash-Sharh",
  "ayat": [
    {
      "arabic": "أَلَمۡ نَشۡرَحۡ لَكَ صَدۡرَكَ",
      "latin": "Alam nashrah laka sadraka",
      "translation": "Bukankah kami telah melapangkan dadamu (Muhammad)"
    },
    {
      "arabic": "وَوَضَعۡنَا عَنكَ وِزۡرَكَ",
      "latin": "WawadaAAna AAanka wizraka",
      "translation": "dan kami pun telah menurunkan beban darimu"
    },
    {
      "arabic": "ٱلَّذِيٓ أَنقَضَ ظَهۡرَكَ",
      "latin": "Allathee anqada thahraka",
      "translation": "yang memberatkan punggungmu"
    },
    {
      "arabic": "وَرَفَعۡنَا لَكَ ذِكۡرَكَ",
      "latin": "WarafaAAna laka thikraka",
      "translation": "dan kami tinggikan sebutan (nama)mu914) bagimu"
    },
    {
      "arabic": "فَإِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرًا",
      "latin": "Fainna maAAa alAAusri yusran",
      "translation": "Maka sesungguhnya bersama kesulitan ada kemudahan"
    },
    {
      "arabic": "إِنَّ مَعَ ٱلۡعُسۡرِ يُسۡرٗا",
      "latin": "Inna maAAa alAAusri yusran",
      "translation": "sesungguhnya bersama kesulitan ada kemudahan"
    },
    {
      "arabic": "فَإِذَا فَرَغۡتَ فَٱنصَبۡ",
      "latin": "Faitha faraghta fainsab",
      "translation": "Maka apabila engkau telah selesai (dari suatu urusan), tetaplah bekerja keras (untuk urusan yang lain)"
    },
    {
      "arabic": "وَإِلَىٰ رَبِّكَ فَٱرۡغَب",
      "latin": "Waila rabbika fairghab",
      "translation": "dan hanya kepada Tuhanmulah engkau berharap"
    }
  ]
}